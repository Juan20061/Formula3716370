<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formula3716370.Expresion"
             Title="Expresion">
    <VerticalStackLayout>
        <Image Source="exp.png"
          HeightRequest="200"
          WidthRequest="800"/>

        <Label 
            
                Text="EXPRESION SEGUN A Y B"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Entry x:Name="entry1" BackgroundColor="AntiqueWhite" Placeholder="Ingrese A"/>
        <Entry x:Name="entry2" BackgroundColor="AntiqueWhite" Placeholder="Ingrese B"/>
        <Entry x:Name="entry3"  BackgroundColor="Aqua" Placeholder="El calculo es de"/>
      
       
        <Button Text="Calcular " BackgroundColor="Crimson" WidthRequest="150" Clicked="Button_Clicked"/>
            
    </VerticalStackLayout>
</ContentPage>