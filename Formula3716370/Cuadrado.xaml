<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formula3716370.Cuadrado"
             Title="Cuadrado">
    <VerticalStackLayout>
        <Image Source="cubo.jpg" 
           HeightRequest="200"
           WidthRequest="800"/>

        <Label 
                   Text="CUADRADO DE UN NUMERO POSITIVO"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Entry x:Name="entry1" Placeholder="Ingrese un  numero"/>
       
        <Entry x:Name="entry2" Placeholder="El cuadrado es de"/>
        <Entry x:Name="entry3" Placeholder="El cubo es de"/>


        <Button Text="Calcular Cuadrado" HeightRequest="50" WidthRequest="150" BackgroundColor="Blue" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>