<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formula3716370.NumInvert"
             Title="NumInvert">
    <VerticalStackLayout>
        <Image Source="invertios.png" 
          HeightRequest="200"
          WidthRequest="600"/>
        <Label 
     Text="NUMEROS INVERTIDOS"
     VerticalOptions="Center" 
     HorizontalOptions="Center" />
        
        <Entry x:Name="entry1" Placeholder="Introduce A"/>
        <Entry x:Name="entry2" Placeholder="Introduce B"/>
        <Entry x:Name="entry3" Placeholder="Introduce C"/>
        <Entry x:Name="entry4" Placeholder="Introduce D"/>
        <Entry x:Name="entry5" Placeholder="Resultado"/>


        <Button Text="Invertir numeros" WidthRequest="150" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>