<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formula3716370.Suma"
             Title="Suma">
    <VerticalStackLayout>
         <Image Source="suma.jpg" 
               HeightRequest="200"
               WidthRequest="800"/>
               
        
        <Label 
            Text="Suma de Dos Numeros"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="entry1" Placeholder="Introduce A"/>
        <Entry x:Name="entry2" Placeholder="Introduce B"/>
        <Entry x:Name="entry3" Placeholder="Resultado"/>
        <Button Text="Sumar Numeros" BackgroundColor="DarkGrey" WidthRequest="160" TextColor="Black" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>