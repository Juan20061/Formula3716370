<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formula3716370.Promedio"
             Title="Promedio">
    <VerticalStackLayout>
        <Image Source="pro.png" 
            HeightRequest="200"
            WidthRequest="600"/>
        <Label 
                Text="PROMEDIO DE NOTAS"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Entry x:Name="entry1" BackgroundColor="Gray" Placeholder="Ingrese nota 1"/>
        <Entry x:Name="entry2" BackgroundColor="Gray" Placeholder="Ingrese nota 2"/>
        <Entry x:Name="entry3" BackgroundColor="Gray" Placeholder="Ingrese nota 3"/>
        <Entry x:Name="entry4" BackgroundColor="Gray" Placeholder="Ingrese nota 4"/>
        <Entry x:Name="entry5" BackgroundColor="Gray" Placeholder="Ingrese nota 5"/>

        <Entry x:Name="entry6"  Placeholder="Su promedio es de"/>

        <Button Text="Ver Promedio " WidthRequest="150" BackgroundColor="DarkSlateGrey" Clicked="Button_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>